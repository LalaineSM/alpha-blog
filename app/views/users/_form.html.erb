<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class:"shadow p-3 mb-1 bg-info rounded shadow rounded", local: true, data:{turbo: false}) do |f| %>
      <div class="form-group row" style="margin-bottom: 0.5rem;">
        <%= f.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class:"form-control shadow rounded", placeholder: "Enter a username" %>
        </div>
      </div>
      <div class="form-group row" style="margin-bottom: 0.5rem;">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "Enter your email address" %>
        </div>
        <div class="form-group row" style="margin-bottom: 0.5rem;">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
        <div class="form-group flex" style="margin-bottom: 0.5rem;">
          <%= f.submit class: "btn btn-outline-light btn-lg", style:"margin-left: auto; margin-right: auto"%>
        </div>
        <% end %>
        
      </div>
      <div class="flex" style="margin-bottom: 0.5rem;">
        <%= link_to '[ Return to Home ]', articles_path, class:"ml-auto mr-auto text-info" %>
      </div>
    </div>
  </div>