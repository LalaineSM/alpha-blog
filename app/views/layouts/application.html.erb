<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>

    <% flash.each do |name, msg| %>
      <p style="color: blue">
      <%= msg %>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
