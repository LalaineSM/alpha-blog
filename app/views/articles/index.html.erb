<h1>Articles listing page </h1>

<table > 
  <thead>
    <tr >
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%=article.title %></td>
        <td><%=article.description %></td>
        <td><%= link_to 'Show', article_path(article), method: :get %></td>
        <td><%= link_to 'Edit', edit_article_path(article), method: :get %></td>
        <td><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"} %></td>
      </tr>

    <% end %>
      <tfoot>
        <tr>
        </tr>
      </tfoot>
  </tbody>
</table>

<p>
<button><%= link_to 'Create New Article', new_article_path(), method: :get %>
</button>
<button><%= link_to 'Home Page', root_path %></button> 
<button><%= link_to 'About Page', about_path %></button>
</p>
