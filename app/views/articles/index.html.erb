<div id="page-content">
  <h1 class="text-center mt-4">Listing all articles</h1>
  <div class="container">
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <div class="card text-center text-bg-light col-6" style="margin-bottom: 3rem">
          <div class="card-header fst-italic">
            by Lalaine Frane
          </div>
          <div class="card-body">
            <h5 class="card-title"><%=article.title %></h5>
            <pre>
              <p class="card-text"><%=article.description %></p></pre>
            <a>
              <div style="display: inline-flex">
                <%= button_to 'View', article_path(article), method: :get, class: "btn btn-outline-success", style:"margin-left: 0.5rem" %>
                <%= button_to 'Edit', edit_article_path(article), method: :get, class: "btn btn-outline-info", style:"margin-left: 0.5rem" %>
                <%= button_to 'Delete', article_path(article), data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"}, class: "btn btn-outline-danger", style:"margin-left: 0.5rem" %>
              </div>
            </a>
          </div>
          <div class="card-footer text-muted">
            Created 15 days ago, edited 4 days ago
          </div>
        </div>
        
      </tr>
      <% end %>
      <tfoot>
      <tr>
      </tr>
      </tfoot>
    </tbody>
  </div>
  <p>
    <%= link_to 'Create New Article', new_article_path(), method: :get %> |
    <%= link_to 'Home Page', root_path %> |
    <%= link_to 'About Page', about_path %>
  </p>
</div>