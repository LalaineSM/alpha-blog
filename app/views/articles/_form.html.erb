<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
  <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class:"shawdow p-3 mb-1 bg-info rounded shadow rounded", local: true, data:{turbo: false}) do |f| %>
      <div class="form-group row" style="margin-bottom: 0.5rem;">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of the article" %>
        </div>
      </div>
      <div class="form-group row" style="margin-bottom: 0.5rem;">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of the article" %>
        </div>
      </div>
      <div class="form-group flex" style="margin-bottom: 0.5rem;">
        <%= f.submit class: "btn btn-outline-light btn-lg", style:"margin-left: auto; margin-right: auto"%>
      </div>
      <% end %>
      
    </div>
    <div class="flex" style="margin-bottom: 0.5rem;">
      <%= link_to '[ Return to Home ]', articles_path, class:"ml-auto mr-auto text-info" %>
    </div>
  </div>
</div>

