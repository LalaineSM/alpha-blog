<div id="page-content">
  <div id="page-content">
    <h2 class="text-center mt-4"><%=@article.title%></h2>
    <div class="container">
      <div class="card text-center">
        <div class="card-header fst-italic">
          by Lalaine Frane
        </div>
        <div class="card-body">
          <p class="card-text"><%= @article.description%></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
        <div class="card-footer text-muted">
          2 days ago
        </div>
      </div>
    </div>
    <p><button><%= link_to 'Create New Article', new_article_path(), method: :get %></button> |
      <button><%= link_to 'Edit', edit_article_path(@article)%></button> |
      <button><%= link_to 'Delete', article_path(@article),  data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"}  %></button> |
      <button><%= link_to 'Return to Home', articles_path %></button>
    </p>